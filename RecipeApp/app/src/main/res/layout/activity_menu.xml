<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#0D47A1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recettes"
        android:id="@+id/textView"
        android:elegantTextHeight="false"
        android:textAlignment="center"
        android:textColor="#E3F2FD"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnrecettes"
        android:layout_alignStart="@+id/btnrecettes"
        android:layout_marginTop="49dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Chercher une recette"
        android:id="@+id/btnsearch"
        android:background="#BBDEFB"
        android:textSize="22sp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="toutes les recettes"
        android:id="@+id/btnrecipe"
        android:background="#BBDEFB"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="A propos"
        android:id="@+id/btnabout"
        android:background="#BBDEFB"
        android:textSize="22sp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/btnrecipe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>